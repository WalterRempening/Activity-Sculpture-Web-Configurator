/**************************************
*   1.Imports
**************************************/

@import nib
@import '../libs/bootstrap/dist/css/bootstrap.min.css'
@import '../libs/bootstrap/dist/css/bootstrap-theme.min.css'
@import url(http://fonts.googleapis.com/css?family=Roboto:900,900italic,100,100italic,400);
@import wc-mixins

/**************************************
*   2.Global Styles
**************************************/

html
  min-height 100%
  position relative

body
  font-family 'Roboto', sans-serif
  margin-bottom 60px


.blowit
  width 100vw
  height 100vh

  .container
    padding-top 80px


.row-centered
  text-align center

.col-centered
  display inline-block
  float none
  text-align left
  margin-right -4px
  min-width: 350px

.wrapper
  min-height 100%
  height auto !important

footer
  position absolute
  height 25px
  width 100%
  bottom 0
  background-color rgba(84, 84, 84, 0.5)

  p
    margin 4px 0 0 0
    color #f5f5f5
    font-weight light
    font-size 0.9em


/**************************************
*   3.Welcome Page Login Form
**************************************/

form.login

  div.form-group
    margin-bottom 10px

    > input
      input-size()

  .btn-success
    input-size()


/**************************************
*   4. 404 error page
**************************************/

.error-box.container
  padding-top 80px

  .error-number
    font-size 22em
    font-weight bold
    font-style italic
    color #e52284
    text-align right

  h1
    font-weight light
    font-style italic
    font-size 8.6em
    text-align right
    color #e2e2e2

  .error-text
    font-weight normal
    font-size 2.3em
    text-decoration line-through
    color #e2e2e2

.fullbg
  background url(../img/404-bg.jpg) no-repeat center center fixed
  min-height: 100%;
  min-width: 1024px;
  width: 100%;
  height: auto;
  z-index -9999
  position: fixed;
  top: 0;
  left: 0;

