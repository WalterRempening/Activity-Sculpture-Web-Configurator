@import nib
@import '../libs/bootstrap/dist/css/bootstrap.min.css'
@import '../libs/bootstrap/dist/css/bootstrap-theme.min.css'
@import url(http://fonts.googleapis.com/css?family=Roboto:900,900italic,100,100italic,400);
@import wc-mixins

/**************************************
*   2.Global Styles
**************************************/

html
  min-height 100%
  position relative

body
  font-family 'Roboto', sans-serif
  margin-bottom 60px


.blowit
  width 100vw
  height 100vh

  .container
    padding-top 80px


.row-centered
  text-align center

.col-centered
  display inline-block
  float none
  text-align left
  margin-right -4px
  min-width: 350px

.wrapper
  min-height 100%
  height auto !important

footer
  position absolute
  height 60px
  width 100%
  bottom 0
/**************************************
*   3.Welcome Page Login Form
**************************************/

form.login

  div.form-group
    margin-bottom 10px

    > input
      input-size()

  .btn-success
    input-size()


