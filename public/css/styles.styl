/**************************************
*   . Configurator Controlls
**************************************/
three-viewport
  background radial-gradient(ellipse at center, #fff 0%, #F7F7F7 61%, #CFCFCF 100%)

#left-ctrls
  position absolute
  width 35% px
  min-width 400px
  min-height 100%
  height 100%
  background-color wc-sidenav-bg

  md-content
    background-color rgba(0, 0, 0, 0)

.slider-value
  font-weight fbold
  font-style italic
  font-size 1.3em

.slider-name
  font-weight fnormal

md-slider:not([md-discrete]):not([disabled]):focus .md-thumb
  transform: scale(.65)

md-slider:not([md-discrete]):not([disabled]):focus .md-focus-ring
  transform: scale(0.7)

md-slider .md-focus-thumb
  left -18px
  top 6px
  width 36px
  height 36px
  border-radius 36px

